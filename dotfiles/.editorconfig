root = true

[**.json]
indent_style = space
indent_size = 2

[**.jsx]
e4x = true
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.js]
indent_style = tab
brace_style = end-expand
keep_array_indentation = true
max_preserve_newlines = 3

[**.html]
indent_style = space
indent_size = 2
brace_style = expand
